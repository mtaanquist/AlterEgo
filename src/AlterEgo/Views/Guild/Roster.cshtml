@model AlterEgo.Models.GuildViewModels.RosterViewModel

@{
    ViewData["Title"] = "Roster";
}

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="pull-right text-right" style="line-height: 14px">

            </div>
            <div class="header-icon">
                <i class="pe page-header-icon pe-7s-users"></i>
            </div>
            <div class="header-title">
                <h3>Roster</h3>
                <small>
                    Displaying all @Model.Members.Count members of Alter Ego.
                </small>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="text-center">Race</th>
                    <th class="text-center">Class</th>
                    <th class="text-center">Level</th>
                    <th class="text-center">Guild Rank</th>
                    <th class="text-center">Achievement Points</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model.Members.OrderByDescending(x => x.Character.AchievementPoints))
                {
                    var normalizedClassName = $"class-{member.Character.CharacterClass.Name.Replace(' ', '-').ToLower()}";
                    <tr>
                        <td class="@normalizedClassName">@member.Character.Name</td>
                        <td class="text-center"><img src="@Html.Raw($"/images/wow/icons/race_{member.Character.Race}_{member.Character.Gender}.jpg")" alt="@member.Character.CharacterRace.Name" class="img-rounded" /></td>
                        <td class="text-center"><img src="@Html.Raw($"/images/wow/icons/class_{member.Character.Class}.jpg")" alt="@member.Character.CharacterClass.Name" class="img-rounded" /></td>
                        <td class="text-center">@member.Character.Level</td>
                        <td class="text-center">@member.Rank</td>
                        <td class="text-center">@member.Character.AchievementPoints</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>