@using Microsoft.AspNetCore.Identity
@using AlterEgo.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#"><i class="fa fa-envelope" aria-hidden="true"></i> Messages <span class="badge"></span></a></li>
            <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="c-white">@UserManager.GetUserName(User)</a></li>
            <li><a id="signout-link" title="Sign out" href="#"><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
        </ul>
    </form>
}
else
{
    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="navbar-form navbar-right">
        <div class="form-group">
            <button type="submit" class="btn btn-default" name="provider" value="BattleNet" title="Log in using your BattleNet account">Log in with Battle.net</button>
        </div>
    </form>
}
