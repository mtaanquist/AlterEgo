@using Microsoft.AspNetCore.Identity
@using AlterEgo.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Welcome, @UserManager.GetUserName(User).</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="navbar-form navbar-right">
        <div class="form-group">
            <button type="submit" class="btn btn-default" name="provider" value="BattleNet" title="Log in using your BattleNet account">Log in with Battle.net</button>
        </div>
    </form>
}
