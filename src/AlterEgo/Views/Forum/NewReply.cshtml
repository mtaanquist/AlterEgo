@model AlterEgo.Models.ForumViewModels.NewReplyViewModel

@{
    ViewBag.Title = $"Replying to {Model.Thread.Name}";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">@ViewBag.Title</h2>
        <p>
            The text editor uses <a href="//en.wikipedia.org/wiki/Markdown">Markdown</a> to help format your post. This allows you to use certain symbols to format your post. Here are some of the most used ones:
            <pre>
*emphasis*
**strong**
* list
>block quote
    code (4 spaces indent)
[links](http://wikipedia.org)</pre>
        </p>

        <form asp-controller="Forum" asp-action="NewReply" asp-antiforgery="true" role="form">
            <input asp-for="ThreadId" value="@Model.Thread.ThreadId" type="hidden" />

            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" rows="12"></textarea>
            </div>

            <div class="pull-right">
                <button type="submit" class="btn btn-default">
                    Post Reply
                </button>
            </div>
        </form>
    </div>
</div>