@model EditThreadViewModel

@{
    ViewBag.Title = $"Editing Post in {Model.Thread.Name}";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Editing a post in @Model.Thread.Name</h2>
        <p>
            The text editor uses <a href="//en.wikipedia.org/wiki/Markdown">Markdown</a> to help format your post. Any BBCode from other places will not work.
        </p>

        <form asp-controller="Forum" asp-action="EditThread" asp-antiforgery="true" role="form">
            <input asp-for="ThreadId" type="hidden"/>
            <input asp-for="PostId" type="hidden" />

            <div class="form-group form-group-lg">
                <label asp-for="Subject">Subject</label>
                <input asp-for="Subject" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="sr-only"></label>
                <textarea asp-for="Content" class="form-control" rows="12"></textarea>
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-lg btn-primary">Save Edited Post</button>
                <a asp-controller="Forum" asp-action="Thread" asp-route-id="@Model.Thread.ThreadId" class="btn btn-lg btn-default">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}