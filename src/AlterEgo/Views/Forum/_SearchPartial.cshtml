<div class="row">
    <div class="col-lg-12">
        <form asp-controller="Forum" asp-action="SearchResults" method="get" id="search-form">
            <div class="input-group">
                <input id="term" name="term" type="text" class="form-control" placeholder="Search for threads..." tabindex="-1">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                </span>
            </div><!-- /input-group -->
        </form>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
