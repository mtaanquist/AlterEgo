@model AlterEgo.Models.ForumViewModels.NewThreadViewModel

@{
    ViewBag.Title = "Starting New Thread";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">@ViewBag.Title in @Model.Forum.Name</h2>
        <p>
            The text editor uses <a href="//en.wikipedia.org/wiki/Markdown">Markdown</a> to help format your post. Any BBCode from other places will not work.
        </p>

        <form asp-controller="Forum" asp-action="NewThread" asp-antiforgery="true" role="form">
            <input asp-for="ForumId" value="@Model.Forum.ForumId" type="hidden"/>

            <div class="form-group form-group-lg">
                <label asp-for="ThreadSubject">Subject</label>
                <input asp-for="ThreadSubject" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="PostContent" class="sr-only"></label>
                <textarea asp-for="PostContent" class="form-control" rows="12"></textarea>
            </div>

            <div class="checkbox">
                <label>
                    <input asp-for="StickyThread"> Sticky the thread after posting?
                </label>
            </div>

            <div class="checkbox">
                <label>
                    <input asp-for="LockThread"> Lock the thread for replies after posting?
                </label>
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-lg btn-default">
                    Post New Thread
                </button>
            </div>
        </form>
    </div>
</div>
