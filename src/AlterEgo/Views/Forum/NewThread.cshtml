@model AlterEgo.Models.ForumViewModels.NewThreadViewModel

@{
    ViewBag.Title = "Starting New Thread";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">@ViewBag.Title in @Model.Forum.Name</h2>
        <p>
            The text editor uses <a href="//en.wikipedia.org/wiki/Markdown">Markdown</a> to help format your post. This allows you to use certain symbols to format your post. Here are some of the most used ones:
            <pre>
*emphasis*
**strong**
* list
>block quote
    code (4 spaces indent)
[links](http://wikipedia.org)</pre>
        </p>

        <form asp-controller="Forum" asp-action="NewThread" asp-antiforgery="true" role="form">
            <input asp-for="ForumId" value="@Model.Forum.ForumId" type="hidden"/>

            <div class="form-group">
                <label asp-for="ThreadSubject"></label>
                <input asp-for="ThreadSubject" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="PostContent"></label>
                <textarea asp-for="PostContent" class="form-control" rows="12"></textarea>
            </div>

            <div class="pull-right">
                <button type="submit" class="btn btn-default">
                    Post New Thread
                </button>
            </div>
        </form>
    </div>
</div>
